generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/kailow"
}

model User {
  id         Int      @id @default(autoincrement())
  nome       String
  email      String   @unique
  telefone   String   @unique
  nascimento DateTime @db.Date
  senha      String
}

model Login {
  id    Int    @id @default(autoincrement())
  email String
  senha String
}

model EditarPerfil {
  id    Int    @id @default(autoincrement())
  nome String
  email String
  descricao String
  curriculo String
  imgUrl String
}

model Publicar {
  id Int @id @default(autoincrement())
  titulo String
  legenda String
  anexar String
}