generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/kailow"
}

model User {
  id          Int        @id @default(autoincrement())
  nome        String
  email       String     @unique
  telefone    String     @unique
  nascimento  DateTime   @db.Date
  description String?
  senha       String
  Login       Login[]
  Publicar    Publicar[]
}

model Login {
  id     Int    @id @default(autoincrement())
  email  String
  senha  String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}

model Publicar {
  id        Int      @id @default(autoincrement())
  legenda   String
  anexar    String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
